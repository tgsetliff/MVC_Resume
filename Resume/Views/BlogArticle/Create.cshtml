@model Resume.Models.BlogArticle

@{
    ViewBag.Title = "Create";
}

<section class="section blog create" id="blog-create">
    <div class="container">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-6">
                    <img src="/img/hero-sm.png" />
                </div>
            </div>
            <div class="row" style="height:10px"></div>
        </div>
        <div class="blog-form">
            <div class="col-md-12">
                <form action="@Url.Action("Create", "BlogArticle")" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-2">
                                <label>Create Date:</label>
                            </div>
                            <div class="col-md-4" id="blog-input">
                                <input type="datetime" name="CreateDate" autofocus value="@if(@Model != null) { @Model.CreateDate}">
                                @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Update Date:</label>
                            </div>
                            <div class="col-md-4" id="blog-input">
                                <input type="datetime" name="UpdateDate" value="@if(@Model != null) { @Model.UpdateDate}">
                                @Html.ValidationMessageFor(model => model.UpdateDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Title:</label>
                            </div>
                            <div class="col-md-10" id="blog-input">
                                <input type="text" name="Title" style="width:600px" value="@if(@Model != null) { @Model.Title}" />
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Body:</label>
                            </div>
                            <div class="col-md-6" id="blog-input">
                                <textarea name="Body" style="height:150px; width:800px">
                                    @if (Model != null)
                                    { @Model.Body}
                                </textarea>
                                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Media URL:</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="MediaUrl" style="width:300px" value="@if(@Model != null) { @Model.MediaUrl}" />
                                @Html.ValidationMessageFor(model => model.MediaUrl, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Published:</label>
                            </div>
                            <div class="col-md-6">
                                <input type="checkbox" name="Publised" value="@if(@Model != null) { @Model.Published}" />
                                @Html.ValidationMessageFor(model => model.Published, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Slug:</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="Slug" style="width:300px" value="@if(@Model != null) { @Model.Slug}" />
                                @Html.ValidationMessageFor(model => model.Slug, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="height:10px"></div>
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                        <footer>
                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </footer>
                    </div>
                </form>
            </div>
        </div>
        </div>
</section>

